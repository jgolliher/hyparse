# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Python files
*.py text eol=lf

# Test data files - keep original line endings
*.hy3 text eol=crlf

# Shell scripts
*.sh text eol=lf

# Windows batch files
*.bat text eol=crlf

# Markdown and documentation
*.md text eol=lf
*.rst text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# JSON files
*.json text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.pyc binary
*.pyo binary
*.so binary
*.dylib binary
*.dll binary
